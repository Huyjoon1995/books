doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="Book Swap Manager. Add your entire book collection online and swap with fellow bookworms.")
    meta(name="author", content="Stephen Mayeux")
    title Book Swap Manager
    // Bootstrap core CSS and custom styles
    link(href="/stylesheets/bootstrap.css", rel="stylesheet")
    link(href="/stylesheets/style.css", rel="stylesheet")
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Book Swap Manager
        #navbar.navbar-collapse.collapse
          form.navbar-form.navbar-right(method='post', action='/', enctype='multipart/form-data')
            if !user
              .form-group
                input.form-control(name="username", type="text", placeholder="Username")
              .form-group
                input.form-control(name="password", type="password", placeholder="Password")
              button.btn.btn-success(name="submit", type="submit", id="layoutsigninbtn") Sign in
            else
              a(href="/users/logout" class="btn btn-success" role="button") Logout #{user.username}
          ul.nav.navbar-nav
            if !user
              li
                a(href="/books/allbooks") View Books
              li
                a(href="/users/register") Register
            else
              li
                a(href="/books/mybooks") My Books
              li
                a(href="/books/allbooks") View Books
              li
                a(href="/books/requests") Requests
              li
                a(href="/users/profile") Profile
    div
      if error && error.length > 0
        .alert.alert-danger.alert-dismissible.fade-in(role="alert")
          button.close(type="button" data-dismiss="alert" aria-label="Close")
            span(aria-hidden="true") ×
          p= error
      if success && success.length > 0
        .alert.alert-success.alert-dismissible.fade-in(role="alert")
          button.close(type="button" data-dismiss="alert" aria-label="Close")
            span(aria-hidden="true") ×
          p= success
      block content
  script(src='/javascripts/jquery-1.12.0.min.js')
  script(src='/javascripts/bootstrap.js')
